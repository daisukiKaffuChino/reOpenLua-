{
  LinearLayout,
  layout_width="fill",
  layout_height="60dp",
  gravity="center|left",
  {
    ImageView,
    layout_width="60dp",
    layout_height="60dp",
    padding="14dp",
    id="malpImg",
  },
  {
    LinearLayout,
    layout_width="fill",
    layout_height="fill",
    orientation="vertical",
    {
      TextView,
      layout_width="fill",
      layout_height="30dp",
      gravity="bottom|left",
      textStyle="bold",
      textSize="12dp",
      textColor=标题文字颜色,
      singleLine="true",
      ellipsize="end",
      id="malpTitle",
    },
    {
      TextView,
      layout_width="fill",
      layout_height="30dp",
      paddingRight="20dp",
      gravity="top|left",
      textColor=副标题文字颜色,
      textSize="8dp",
      singleLine="true",
      ellipsize="start",
      id="malpSubTitle",
    },
  },
}

